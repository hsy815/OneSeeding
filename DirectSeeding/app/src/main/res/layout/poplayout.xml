<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/yuanjiao_white_bg"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pop_quit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

        <com.hsy.directseeding.view.CircleImageView
            android:id="@+id/pop_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/pop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="啦啦啦啦啦"
        android:textColor="@color/black_44"
        android:textSize="16sp" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="98dp"
            android:background="@color/black_c2" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="踢人"
                android:textColor="@color/end_text_blue" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black_c2" />

            <TextView
                android:id="@+id/pop_btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="踢人"
                android:textColor="@color/end_text_blue" />
        </LinearLayout>
</LinearLayout>
