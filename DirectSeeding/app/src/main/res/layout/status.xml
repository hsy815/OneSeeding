<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/status_top"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/streamingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pldroid_streaming_item_padding"
        android:layout_marginTop="@dimen/pldroid_streaming_item_padding"
        android:contentDescription="@string/cd_tv_streaming_state_hint"
        android:text="@string/string_state_ready"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@drawable/yuanjiao_brck"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_height="35dp">

        <com.hsy.directseeding.view.CircleImageView

            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hsudh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hsudh" />

        </LinearLayout>
    </LinearLayout>

    <com.hsy.directseeding.view.MyRecyclerView
        android:id="@+id/myRecycler"
        android:layout_width="wrap_content"
        android:layout_height="35dp">

    </com.hsy.directseeding.view.MyRecyclerView>

</LinearLayout>
